{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~src/*": ["./src/*"],
      "~sidepanel/*": ["./sidepanel/*"],
      "~lib/*": ["./src/lib/*"]
    },
    "types": ["chrome"]
  },
  "include": ["src", "sidepanel", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist"]
}
