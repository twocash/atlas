{
  "manifest_version": 3,
  "name": "Atlas â€” LinkedIn Sales Nav Assistant",
  "description": "AI Chief of Staff for LinkedIn Sales Navigator automation",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "alarms",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": ["content-scripts/linkedin-feed.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.linkedin.com/sales/*",
        "https://www.linkedin.com/in/*"
      ],
      "js": ["content-scripts/linkedin.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "<all_urls>",
    "https://www.linkedin.com/*",
    "https://api.notion.com/*",
    "https://api.phantombuster.com/*",
    "https://phantombuster.s3.amazonaws.com/*",
    "http://localhost:3847/*",
    "http://localhost:3848/*"
  ]
}
