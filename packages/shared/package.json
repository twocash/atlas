{
  "name": "@atlas/shared",
  "version": "1.0.0",
  "description": "Shared utilities for Atlas ecosystem",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js"
    },
    "./chrome-extension-api": {
      "types": "./dist/chrome-extension-api.d.ts",
      "import": "./dist/chrome-extension-api.js"
    },
    "./notion": {
      "types": "./dist/notion/index.d.ts",
      "import": "./dist/notion/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./error-escalation": {
      "types": "./dist/error-escalation.d.ts",
      "import": "./dist/error-escalation.js"
    },
    "./test-failure-reporter": {
      "types": "./dist/test-failure-reporter.d.ts",
      "import": "./dist/test-failure-reporter.js"
    },
    "./trace": {
      "types": "./dist/trace.d.ts",
      "import": "./dist/trace.js"
    },
    "./context-transparency": {
      "types": "./dist/context-transparency.d.ts",
      "import": "./dist/context-transparency.js"
    },
    "./types/slot-result": {
      "types": "./dist/types/slot-result.d.ts",
      "import": "./dist/types/slot-result.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@notionhq/client": "^2.2.14",
    "@tryfabric/martian": "^1.2.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
